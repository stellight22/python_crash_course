
import unittest
from employee import Employee

class TestEmployee(unittest.TestCase):

    def setUp(self):
        self.employee_info = Employee('bob', 'anderson', 80000)
    
    def test_give_default_raise(self):
        self.employee_info.give_raise()
        self.assertEqual(self.employee_info.salary, 85000)

    def test_give_custom_raise(self):
        self.employee_info.give_raise(10000)
        self.assertEqual(self.employee_info.salary, 90000)

unittest.main()